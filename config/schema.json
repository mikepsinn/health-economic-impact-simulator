{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "population": {
      "type": "object",
      "description": "US population statistics for different demographic groups",
      "properties": {
        "total_us": {
          "type": "integer",
          "description": "Total US population (all ages)",
          "minimum": 300000000,
          "maximum": 400000000
        },
        "over_60": {
          "type": "integer",
          "description": "US population aged 60 years and older",
          "minimum": 50000000,
          "maximum": 100000000
        },
        "adult": {
          "type": "integer",
          "description": "US adult population (18 years and older)",
          "minimum": 200000000,
          "maximum": 300000000
        }
      },
      "required": ["total_us", "over_60", "adult"]
    },
    "economics": {
      "type": "object",
      "description": "Economic parameters for healthcare and productivity calculations",
      "properties": {
        "medicare_per_capita": {
          "type": "number",
          "description": "Average annual Medicare spending per beneficiary in USD",
          "minimum": 5000,
          "maximum": 50000
        },
        "gdp_per_capita": {
          "type": "number",
          "description": "Annual US GDP per capita in USD",
          "minimum": 40000,
          "maximum": 100000
        },
        "alzheimers_annual_cost": {
          "type": "number",
          "description": "Total annual US healthcare and caregiving costs for Alzheimer's disease in USD",
          "minimum": 100000000000,
          "maximum": 1000000000000
        },
        "ckd_annual_cost": {
          "type": "number",
          "description": "Total annual US healthcare costs for Chronic Kidney Disease in USD",
          "minimum": 50000000000,
          "maximum": 500000000000
        }
      },
      "required": ["medicare_per_capita", "gdp_per_capita", "alzheimers_annual_cost", "ckd_annual_cost"]
    },
    "health_baselines": {
      "type": "object",
      "description": "Baseline health statistics and rates for the US population",
      "properties": {
        "hospital_visits_per_year": {
          "type": "number",
          "description": "Average number of inpatient hospital stays per person per year",
          "minimum": 0,
          "maximum": 1
        },
        "average_lifespan": {
          "type": "number",
          "description": "Average US life expectancy at birth in years",
          "minimum": 70,
          "maximum": 90
        },
        "medicare_enrollment_rate": {
          "type": "number",
          "description": "Current proportion of US population enrolled in Medicare",
          "minimum": 0,
          "maximum": 1
        },
        "alzheimers_rate": {
          "type": "number",
          "description": "Prevalence of Alzheimer's disease in population over 60 years",
          "minimum": 0,
          "maximum": 1
        },
        "ckd_rate": {
          "type": "number",
          "description": "Prevalence of Chronic Kidney Disease in adult population",
          "minimum": 0,
          "maximum": 1
        },
        "average_iq": {
          "type": "number",
          "description": "Population mean IQ score (normalized to 100)",
          "minimum": 85,
          "maximum": 115
        }
      },
      "required": ["hospital_visits_per_year", "average_lifespan", "medicare_enrollment_rate", 
                  "alzheimers_rate", "ckd_rate", "average_iq"]
    },
    "intervention_effects": {
      "type": "object",
      "description": "Expected effects of the therapeutic intervention",
      "properties": {
        "physical": {
          "type": "object",
          "description": "Changes in physical body composition",
          "properties": {
            "muscle_mass_change": {
              "type": "number",
              "description": "Average change in lean muscle mass in pounds (positive = gain)",
              "minimum": -10,
              "maximum": 20
            },
            "fat_mass_change": {
              "type": "number",
              "description": "Average change in fat mass in pounds (negative = loss)",
              "minimum": -30,
              "maximum": 10
            }
          },
          "required": ["muscle_mass_change", "fat_mass_change"]
        },
        "longevity": {
          "type": "object",
          "description": "Effects on lifespan and aging",
          "properties": {
            "lifespan_increase": {
              "type": "number",
              "description": "Mean percentage increase in lifespan based on clinical data",
              "minimum": 0,
              "maximum": 20
            }
          },
          "required": ["lifespan_increase"]
        },
        "biomarkers": {
          "type": "object",
          "description": "Changes in measurable biological markers over 12-month period",
          "properties": {
            "egfr_change": {
              "type": "number",
              "description": "Change in estimated Glomerular Filtration Rate (mL/min/1.73mÂ²)",
              "minimum": -10,
              "maximum": 30
            },
            "cystatin_c_change": {
              "type": "number",
              "description": "Change in Cystatin C levels (mg/L)",
              "minimum": -2,
              "maximum": 2
            }
          },
          "required": ["egfr_change", "cystatin_c_change"]
        },
        "healthcare": {
          "type": "object",
          "description": "Impact on healthcare utilization",
          "properties": {
            "hospital_visit_reduction": {
              "type": "number",
              "description": "Percentage reduction in annual inpatient hospital visits",
              "minimum": 0,
              "maximum": 50
            }
          },
          "required": ["hospital_visit_reduction"]
        }
      },
      "required": ["physical", "longevity", "biomarkers", "healthcare"]
    },
    "impact_modifiers": {
      "type": "object",
      "description": "Coefficients that modify how intervention effects translate to outcomes",
      "properties": {
        "muscle_to_falls": {
          "type": "number",
          "description": "Fraction of falls reduced per pound of muscle gained (linear up to 10 lb gain)",
          "minimum": 0,
          "maximum": 1
        },
        "lifespan_to_gdp": {
          "type": "number",
          "description": "Fraction of lifespan increase that contributes to GDP (accounts for retirement and disability)",
          "minimum": 0,
          "maximum": 1
        },
        "health_quality": {
          "type": "number",
          "description": "Improvement in quality-adjusted life years (QALY) score",
          "minimum": 0,
          "maximum": 1
        },
        "kidney_to_medicare": {
          "type": "number",
          "description": "Fraction of Medicare costs reduced per unit improvement in kidney function",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["muscle_to_falls", "lifespan_to_gdp", "health_quality", "kidney_to_medicare"]
    }
  },
  "type": "object",
  "properties": {
    "base_parameters": {
      "type": "object",
      "properties": {
        "population": { "$ref": "#/definitions/population" },
        "economics": { "$ref": "#/definitions/economics" },
        "health_baselines": { "$ref": "#/definitions/health_baselines" }
      },
      "required": ["population", "economics", "health_baselines"]
    },
    "intervention": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the therapeutic intervention"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the intervention mechanism"
        },
        "default_effects": { "$ref": "#/definitions/intervention_effects" },
        "impact_modifiers": { "$ref": "#/definitions/impact_modifiers" }
      },
      "required": ["name", "description", "default_effects", "impact_modifiers"]
    }
  },
  "required": ["base_parameters", "intervention"]
} 